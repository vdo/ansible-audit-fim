name: Molecule test

on:
  push:
    paths:
      - roles/**
      - molecule/**
      - .github/workflows/molecule.yml

jobs:
  molecule-test:
    runs-on: ubuntu-22.04
    steps:
      - name: Install pip dependencies üêç
        uses: BSFishy/pip-action@v1
        with:
          packages: |
            molecule
            podman
            python-vagrant
            ansible-lint
            flake8
            molecule[lint]
            molecule-plugins[podman]
      - name: Checkout code üèÅ
        uses: actions/checkout@v3
      - name: Molecule test ‚öõÔ∏è
        run: molecule test
        env:
          ANSIBLE_FORCE_COLOR: "1"
